<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@android:color/holo_blue_light"
    tools:context=".MoonFragment"
    android:columnCount="2"
    android:rowCount="1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_row="0"
        android:layout_column="0">

    

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Długość geograficzna:"
        android:textAlignment="center"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/longitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="17sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Szerokość geograficzna:"
        android:textAlignment="center"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/latitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="17sp"
        android:textStyle="bold" />


        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wschód:"
            android:textAlignment="center"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/moonRise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textAlignment="center"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Zachód:"
            android:textAlignment="center"
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/moonSet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textAlignment="center"
            android:textSize="17sp"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1">

        <Space
        android:layout_width="match_parent"
        android:layout_height="25dp" />


    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Najbliższy nów:"
        android:textAlignment="center"
        android:textSize="17sp"/>

    <TextView
        android:id="@+id/nextNewMoon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="17sp"
        android:textStyle="bold"/>


    <TextView
        android:text="Najbliższa pełnia:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewww"
        android:textAlignment="center"
        android:textSize="17sp"/>

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nextFullMoon"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="17sp"/>

    <TextView
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Faza księżyca:"
        android:textAlignment="center"
        android:textSize="17sp"/>

    <TextView
        android:id="@+id/illumination"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="17sp"
        android:textStyle="bold"/>


    <TextView
        android:id="@+id/textView14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dzień miesiąca synodycznego:"
        android:textAlignment="center"
        android:textSize="17sp"/>

    <TextView
        android:id="@+id/dayMonth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="17sp"
        android:textStyle="bold"/>
    </LinearLayout>



</GridLayout>


